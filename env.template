# =============================================
# BIRTH HEALTH NETWORK - ENVIRONMENT CONFIGURATION
# =============================================

# =============================================
# DATABASE CONFIGURATION
# =============================================
# Database Type (postgres or sqlite)
DB_TYPE=postgres

# PostgreSQL Configuration (Production/Development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=birth_health_network
DB_USER=bhn_user
DB_PASSWORD=your_secure_password_here

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=10000

# =============================================
# SERVER CONFIGURATION
# =============================================
# Server Settings
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# Domain and CORS Settings
DOMAIN=localhost
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Enable HTTPS (for production)
HTTPS_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# =============================================
# JWT & AUTHENTICATION
# =============================================
# JWT Secret (Generate a strong random string)
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_64_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Password Security
BCRYPT_ROUNDS=12

# Two-Factor Authentication
TWO_FACTOR_SERVICE=authenticator
TWO_FACTOR_ISSUER=Birth Health Network

# =============================================
# EMAIL CONFIGURATION
# =============================================
# Email Service Provider
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Email Settings
FROM_EMAIL=noreply@birthhealth.network
FROM_NAME=Birth Health Network
SUPPORT_EMAIL=support@birthhealth.network

# =============================================
# SECURITY & HIPAA COMPLIANCE
# =============================================
# Session Security
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# HIPAA Compliance
ENCRYPTION_KEY=your_32_character_encryption_key
HIPAA_AUDIT_ENABLED=true
HIPAA_LOG_LEVEL=info

# Security Headers
HELMET_ENABLED=true
CORS_ENABLED=true

# =============================================
# CLOUD STORAGE (AWS S3)
# =============================================
# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=bhn-documents
AWS_CLOUDFRONT_DOMAIN=

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt

# =============================================
# LOGGING & MONITORING
# =============================================
# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/application.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Application Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=birth-health-network
APM_SECRET_TOKEN=

# Health Check
HEALTH_CHECK_ENABLED=true

# =============================================
# EXTERNAL SERVICES
# =============================================
# Payment Processing (if needed)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Google Services
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_MAPS_API_KEY=

# =============================================
# DEVELOPMENT SETTINGS
# =============================================
# Development Tools
DEBUG_MODE=false
MOCK_EMAIL=true
MOCK_SMS=true

# Database Seeding
AUTO_SEED_DB=false
SEED_ADMIN_EMAIL=admin@birthhealth.network
SEED_ADMIN_PASSWORD=Admin123!

# =============================================
# PRODUCTION SETTINGS
# =============================================
# Production Optimization
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# SSL/TLS Settings
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000

# =============================================
# FEATURE FLAGS
# =============================================
# Application Features
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true

# HIPAA Features
ENABLE_AUDIT_LOGS=true
ENABLE_DATA_ENCRYPTION=true
ENABLE_ACCESS_CONTROLS=true

# =============================================
# BACKUP & RECOVERY
# =============================================
# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=bhn-backups

# =============================================
# ANALYTICS & METRICS
# =============================================
# Google Analytics
GA_TRACKING_ID=

# Application Metrics
METRICS_ENABLED=false
METRICS_PORT=9464

# =============================================
# DEPLOYMENT SETTINGS
# =============================================
# Container Settings
CONTAINER_PORT=3001
HEALTH_CHECK_PATH=/health

# Load Balancer
TRUST_PROXY=false

# Graceful Shutdown
SHUTDOWN_TIMEOUT=10000
